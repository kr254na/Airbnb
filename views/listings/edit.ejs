<%-layout("/layouts/boilerplate")%>
<body>
    <div class="row">
        <div class="col-8 mt-3 offset-2">
    <h3 class="mb-3">Edit your Listing</h3>
    <form action="/listings/<%=listing._id%>?_method=put" method="post" novalidate  class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
        <input name="title" value="<%=listing.title%>" type="text" class="form-control" required>
        <div class="valid-feedback">
            Title looks good!
          </div>
          <div class="invalid-feedback">
            Title is mandatory
          </div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
        <textarea name="description" class="form-control" type="text" required><%=listing.description%></textarea>
        <div class="invalid-feedback">
            Please Enter a short description
          </div>
        </div> 
        <div class="mb-3">
            Original Listing Image <br>
            <img src="<%=listing.image.url%>" alt="Original Image" width="300rem" height="200rem">
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Upload New Image</label>
        <input name="image" class="form-control"  type="file">
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
            <input name="price" class="form-control" value="<%=listing.price%>" type="number" min="0" required>
            <div class="invalid-feedback">
                Please Enter the price
              </div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
            <input name="country" class="form-control" value="<%=listing.country%>" type="text" required>
            <div class="invalid-feedback">
                Country name must be valid
              </div>
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
        <input name="location" class="form-control" value="<%=listing.location%>" type="text" required>
        <div class="invalid-feedback">
            Location must be valid
          </div>
        </div>
        <button class="btn btn-dark edit-btn mb-3">Edit</button>
    </form>
    </div>
</div>
</body>